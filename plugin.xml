<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.statistic.count.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.statistic.count.Perspective"
            id="com.statistic.count.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.statistic.views.DiscroptionView"
            icon="icons/control_play.png"
            id="com.statistic.count.discription"
            name="DiscriptionView"
            restorable="true">
      </view>
      <view
            class="com.statistic.views.ExplorerView"
            icon="icons/control_play.png"
            id="com.statistic.count.Explorer"
            name="ExplorerView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="File">
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="fst">
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.statistic.handlers.openDialog"
            id="com.statistic.count.openDialog"
            name="Open">
      </command>
   </extension>

</plugin>
